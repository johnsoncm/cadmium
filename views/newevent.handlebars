<div class="row">
  <div class="col-auto">
    <div class="row"> <img src="./images/cadmiumCircle.png" alt="Cadmium logo" class="logo"> </div>

    <h2 class="art-event-text">Add An Art Event!</h2>
  </div>
</div>
​
<div class="row mt-4">
  <div class="col-md-6">
    <h3 class="art-event-text">Found a new art event? Share that information here so others can learn about it too!</h3>
    ​
    <form class="form new-event-form" id="new-event-form">
      <div class="form-group">
        <label for="event-name">Event Name:</label>
        <input class="form-input" type="text" id="event-name" name="event-name" />
      </div>

      <div class="form-group row">
        <!--Jquery datepicker-->
        <label for="date" class="col-sm-4 col-form-label">Date: </label>
        <div class="col-sm-8">
          <input type="text" class="form-control" id="datepicker" id='date' autocomplete="off" />
        </div>
      </div>
      <div class="form-group">
        <!--Jquery timepicker-->
        <label for="time">Time:</label>
        <input class="form-input" type="text" id="timepicker" id='time' name="time" />
      </div>
      <div class="form-group">
        <label for="venue">Venue:</label>
        <input class="form-input" type="text" id="venue" name="venue" />
      </div>
      <div class="form-group">
        <label for="venue-address">Venue Address:</label>
        <input class="form-input" type="text" id="venue-address" name="venue-address" />
      </div>
      <div class="form-group">
        <label for="event-description">Description:</label>
        <textarea class="form-input" type="text" id="event-description" name="event-description"></textarea>
      </div>
      <div class="form-group">
        <label for="event-description">Image Link:</label>
        <p>If you would like to include an image, please add the link here:</p>
        <textarea class="form-input" type="text" id="img" name="img"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Add</button>
      </div>
    </form>
  </div>
  ​
  {{#if events.length}}
  <div class="col-md-6 event-list">
    <h3>Current Events:</h3>
    {{#each events as |event|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/events/{{event.id}}">{{event.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{event.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>
​
