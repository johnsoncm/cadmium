<!-- Loop over each object in the events array - currently showing the projects array from mini-project - need to change to reflect what we want-->
{{#each events as |event| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/event/{{event.id}}">{{event.name}}</a>
    </h2>
    <p>Added by {{event.user.name}} on {{format_date event.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{event.description}}
    </p>
  </div>
</div>
{{/each}}
